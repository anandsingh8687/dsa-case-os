# ============================================
# DSA Case OS - Environment Variables Template
# Copy this to .env and fill in your values
# ============================================

# ===== Database Configuration =====
# Railway will provide DATABASE_URL automatically
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/dsa_case_os

# ===== Application Settings =====
API_PREFIX=/api/v1
ENVIRONMENT=production
DEBUG=false

# ===== JWT Secret (Generate a strong random string) =====
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# ===== LLM API Configuration (Moonshot AI - Kimi) =====
# Get API key from: https://platform.moonshot.cn/
LLM_API_KEY=your-moonshot-kimi-api-key
LLM_MODEL=kimi-k2.5
LLM_BASE_URL=https://api.moonshot.cn/v1

# ===== WhatsApp Service =====
# Internal service URL (Railway will handle this)
WHATSAPP_SERVICE_URL=http://whatsapp:3001

# ===== CORS Settings =====
# Railway will provide RAILWAY_PUBLIC_DOMAIN
CORS_ORIGINS=["https://your-railway-domain.railway.app"]

# ===== File Upload Settings =====
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=/app/uploads

# ===== Optional: External Services =====
# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn

# ===== Railway-specific (Auto-provided) =====
# PORT - Railway sets this automatically
# RAILWAY_ENVIRONMENT - Railway sets this automatically
# RAILWAY_PUBLIC_DOMAIN - Railway sets this automatically
